- yearly_cost_pence = 365 * product['standing_charge_rate'].to_f + usage * product['rate1'].to_f
- calculation = "365*#{product['standing_charge_rate'].to_f}+#{usage}*#{product['rate'].to_f}"
- cost = product['duration'] * yearly_cost_pence / 100.0
- calculation = "#{product['duration']}*(#{calculation})/100"

.cma-result
  .title
    - duration = product['duration']
    - duration_text = "#{duration} #{duration == 1 ? ' year' : ' years'}"
    = "#{duration_text} Gas #{product['matrix_id']}"
  .details.container-fluid
    .row
      .total-cost.field.col-sm-4
        Total Cost
        .amount= number_to_currency(cost, locale: :'en-GB')
      .field.col-sm-4
        Unit Rate
        .value
          = product['rate'] + " p/kWh"
    .row
      .field.col-sm-4
        Standing Charge
        .value
          = product['standing_charge_rate'] + " p/day"
      .field.col-sm-4
        Product Code
        .value
          = product['matrix_id']
      .field.col-sm-4
        Payment Type
        .value
          Monthly Direct Debit
  .calculation
    Calc:
    = calculation

