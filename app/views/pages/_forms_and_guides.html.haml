- documents = Comfy::Cms::File.for_category('Documents')
- sorted = documents.sort_by(&:label)
- if !sorted.empty?
  %table.table.table-striped
    %thead
      %tr
        %th Document
        %th &nbsp;
    %tbody
      - sorted.each do |doc|
        %tr
          %td
            = doc.label
          %td
            %a{href: doc.file.url, target: '_blank'}
              view
- else
  %p
    No documents are available for download yet.

