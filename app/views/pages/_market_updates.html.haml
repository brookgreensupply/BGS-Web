- updates = Comfy::Cms::Page.for_category("Market Update").published
- sorted = updates.sort_by(&:created_at).reverse
%ul.no-mark
  - sorted.each do |update|
    %li
      %h4= update.label
      - preview_block = update.blocks.select {|b| b.identifier == 'preview'}.first
      - if preview_block
        %div
          != preview_block.content
      %a{href: update.url}
        Read more
      %hr

